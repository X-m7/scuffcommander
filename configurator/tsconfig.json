{
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "noEmit": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "paths": {
      "/*": ["./public/*"]
    },
    "target": "ES2016",
    "module": "esnext",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "skipLibCheck": true
  },
  "include": ["node_modules/wmr/types.d.ts", "**/*"],
  "exclude": ["./dist", "./src-tauri"],
  "typeAcquisition": {
    "enable": true
  }
}
